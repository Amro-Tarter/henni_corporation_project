rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // âœ… Specific access for your collections
    match /elemental_projects/{document=**} {
      allow read, write: if true; // DEV ONLY
    }
    match /events/{document=**} {
      allow read, write: if true; // DEV ONLY
    }
    match /team/{document=**} {
      allow read: if true;  // Allow public read access
      allow write: if request.auth != null;  // Allow authenticated users to write
    }
    // Staff and Mentors collections
    match /staff/{document=**} {
      allow read: if true;  // Allow public read access
      allow write: if request.auth != null;  // Allow authenticated users to write
    }
    match /mentors/{document=**} {
      allow read: if true;  // Allow public read access
      allow write: if request.auth != null;  // Allow authenticated users to write
    }

    // ðŸš« Default deny fallback
    match /{document=**} {
      allow read, write: if false;
    }

    // â”€â”€ Conversations & messages â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /conversations/{convoId} {
      allow read, write: if true;              // TEMPORARY
      match /messages/{msgId} {
        allow read, write: if true;            // TEMPORARY
      }
    }
    match /conversations/{convoId}/messages/{messageId} {
      allow create: if request.auth != null && 
        request.resource.data.type == "system" && 
        request.resource.data.text.matches("^Community created!");
    }

    // â”€â”€ Users collection â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /users/{userId} {
      allow read:  if true;                    // TEMPORARY: public read
      //allow write: if request.auth.uid == userId;
      allow write: if true;
    }

    // â”€â”€ Profiles (public-facing) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /profiles/{uid} {
      allow read:  if true;                   // public read
      //allow write: if request.auth.uid == uid;
      allow write: if true;               // TEMPORARY (remove later)
    }

    // â”€â”€ Posts collection â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /posts/{postId} {
      allow read:  if true;                   // public read
      //allow write: if request.auth.uid == uid;
      allow write: if true;               // TEMPORARY (remove later)
      
      match /comments/{commentId} {
        allow read, write: if true;  			// Temporary
      }
    }
  }
}

// AFTER UPDATING RUN THIS: firebase deploy --only firestore:rules
