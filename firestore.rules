rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // âœ… Specific access for your collection
    match /elemental_projects/{document=**} {
      allow read, write: if true; // DEV ONLY
    }
    match /events/{document=**} {
      allow read, write: if true; // DEV ONLY
    }
    // ðŸš« Optional: Default deny fallback
    match /{document=**} {
      allow read, write: if false;
    }
     // â”€â”€ Conversations & messages â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /conversations/{convoId} {
      allow read, write: if true;              // TEMPORARY
      match /messages/{msgId} {
        allow read, write: if true;            // TEMPORARY
      }
    }
    // â”€â”€ Users collection â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /users/{userId} {
      allow read:  if true;                    // TEMPORARY: public read
      //allow write: if request.auth.uid == userId;
      allow write: if true;
    }
  }
}

// AFTER UPDATING RUN THIS: firebase deploy --only firestore:rules
